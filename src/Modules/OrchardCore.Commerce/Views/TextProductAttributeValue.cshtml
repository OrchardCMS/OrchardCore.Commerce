@using OrchardCore.Commerce.ProductAttributeValues
@{
    var attribute = Model.Attribute as TextProductAttributeValue;
    var values = attribute?.Value?.WhereNot(string.IsNullOrEmpty).ToList() ?? new List<string>();

    if (values.Any())
    {
        TagBuilder tag = Tag(Model, "li");
        tag.AddCssClass("list-inline-item");
        var label = Model.Label as string ?? string.Empty;
        tag.InnerHtml.AppendHtml(T["{0}: {1}", label, string.Join(T[", "].Value, values)]);
        @tag
    }
}
