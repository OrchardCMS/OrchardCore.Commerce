@using OrchardCore.ContentManagement.Metadata.Models
@model OrchardCore.ContentFields.ViewModels.DisplayNumericFieldViewModel

@if (Model.Value is { } value && value > 0)
{
    <div class="field field-type-numericfield field-name-discount-part-discount-percentage">
        <strong class="field-name-discount-part-discount-percentage-title">@Model.PartFieldDefinition.DisplayName()</strong>
        @T["{0}%", value]
    </div>
}
