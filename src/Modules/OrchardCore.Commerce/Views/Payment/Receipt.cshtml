@using OrchardCore.Commerce.ViewModels;

@model CardPaymentReceiptViewModel
@{
    ViewData["Title"] = "Receipt";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"
      crossorigin="anonymous"
      integrity="sha256-eSi1q2PG6J7g7ib17yAaWMcrr5GrtohYChqibrV7PBE=" />

<div class="row pt-md-5">
    <div class="col-6 mx-auto">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="text-success text-center">Thanks, Here's Your Receipt!</h4>
            </div>
            <div class="panel-body">
                <p>
                    <b>Amount:</b> $@(Model.Amount/100)<br />
                    <b>Currency:</b> @Model.Currency<br />
                    <b>Description:</b> @Model.Description<br />
                    <b>Status:</b> @Model.Status<br />
                    <b>Created:</b> @Model.Created<br />
                    <b>BalanceTransactionId:</b> @Model.BalanceTransactionId<br />
                    <b>Id:</b> @Model.Id<br />
                    <b>SourceId:</b> @Model.SourceId<br />
                </p>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"
        integrity="sha256-E/V4cWE4qvAeO5MOhjtGtqDzPndRO1LBk8lJ/PR7CA4=">
</script>
