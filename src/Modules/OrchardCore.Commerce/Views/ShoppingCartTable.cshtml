@using OrchardCore.Commerce.MoneyDataType;
@using OrchardCore.Commerce.Tax.Extensions;
@{
    var viewModel = (ShoppingCartViewModel)Model.ShoppingCartViewModel;
    var lines = viewModel.Lines;

    var currency = (lines[0].AdditionalData.GetGrossPrice()).Currency;
    var netTotal = new Amount(0, currency);
    var grossTotal = new Amount(0, currency);

    foreach (var line in lines)
    {
        var netPrice = line.AdditionalData.GetNetPrice();
        var grossPrice = line.AdditionalData.GetGrossPrice();

        netTotal += netPrice;
        grossTotal += grossPrice;
    }
}

